# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

GET     /jsonLocationTrace/                     Application.jsonLocationTrace
GET     /jsonPhoto/                             Application.jsonPhoto
GET     /jsonPoi/                               Application.jsonPoi
POST    /broadcastClosePoi/                     Application.broadcastClosePoi
POST    /broadcastOpenPoi/                      Application.broadcastOpenPoi
POST    /createPoi/                             Application.createPoi
POST    /registerUser/                          Application.registerUser
POST    /renderPhoto/                           Application.renderPhoto
POST    /renderPoi/                             Application.renderPoi
POST    /renderPoiStatus/                       Application.renderPoiStatus
POST    /renderPoiPowerTag/                     Application.renderPoiPowerTag
POST    /renderPoiPowerTagGeneratorMethod/      Application.renderPoiPowerTagGeneratorMethod
POST    /renderPoiPowerTagGeneratorType/        Application.renderPoiPowerTagGeneratorType
POST    /renderSettingsModal/                   Application.renderSettingsModal
POST    /renderSettingsUserAdministration/      Application.renderSettingsUserAdministration
POST    /reservePoi/                            Application.reservePoi
POST    /updatePoi/                             Application.updatePoi
POST    /updateSettings/                        Application.updateSettings
WS      /websocket/                             WebSocket.join

# Catch all
*       /{controller}/{action}                  {controller}.{action}